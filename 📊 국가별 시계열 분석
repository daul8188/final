with st.expander("ğŸ“Š êµ­ê°€ë³„ ì‹œê³„ì—´ ë¶„ì„"):
    country_list = sorted(df["Country Name"].unique())
    selected_country = st.selectbox("êµ­ê°€ ì„ íƒ", country_list)

    country_data = df[df["Country Name"] == selected_country].sort_values("Year")

    fig2, ax2 = plt.subplots(figsize=(10, 5))
    ax2.plot(country_data["Year"], country_data["GDP USD"], label="GDP (USD)", color="blue")
    ax2.set_ylabel("GDP (USD)", color="blue")
    ax2.tick_params(axis="y", labelcolor="blue")

    ax3 = ax2.twinx()
    ax3.plot(country_data["Year"], country_data["CO2"], label="COâ‚‚ (tons)", color="red")
    ax3.set_ylabel("COâ‚‚ Emissions", color="red")
    ax3.tick_params(axis="y", labelcolor="red")

    plt.title(f"{selected_country}ì˜ ì—°ë„ë³„ GDP ë° COâ‚‚ ë°°ì¶œëŸ‰")
    st.pyplot(fig2)
